        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/bg_272F4F" />
            <solid android:color="@color/bg_272F4F"/>
            <corners android:radius="@dimen/dp_8" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/bg_272F4F" />
            <solid android:color="@color/bg_272F4F"/>
            <corners android:radius="@dimen/dp_8" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/bg_97" />
            <solid android:color="@color/bg_D8" />
