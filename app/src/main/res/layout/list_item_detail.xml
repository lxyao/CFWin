<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match.wrap.ver_linear"
    android:background="@drawable/bg_txt_shape">

    <LinearLayout
        android:id="@+id/ll_tmp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        style="@style/match.wrap.hor_linear">
        <TextView
            android:id="@+id/title"
            style="@style/match.wrap"
            tools:text="MY01"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/type"
            style="@style/match.wrap"
            tools:text="积分"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_weight="2"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_tmp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_15"
        style="@style/match.wrap.hor_linear">
        <TextView
            android:id="@+id/time"
            style="@style/match.wrap"
            tools:text="2018-10-12 12:23:21"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/num"
            style="@style/match.wrap"
            tools:text="+1234"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_weight="2"
            android:gravity="center"/>
    </LinearLayout>
    
    <View
        android:visibility="invisible"
        android:id="@+id/tmp_line"
        style="@style/ver_lin"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/dp_18" />
    
    <ImageView
        android:visibility="visible"
        android:id="@+id/state"
        android:layout_width="101dp"
        android:layout_height="94dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        tools:src="@mipmap/ic_change_success"
        android:layout_toRightOf="@id/tmp_line"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerVertical="true"/>
</RelativeLayout>