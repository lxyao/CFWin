<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/trans_root">
    <include layout="@layout/base_top_toolbar"/>
    <ImageView
        android:id="@+id/head"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_user_head"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"/>
    <EditText
        android:id="@+id/nickName"
        style="@style/service_input"
        tools:text="王二虎"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        style="@style/match.wrap.hor_linear"
        android:layout_marginTop="@dimen/dp_5">
        <TextView
            style="@style/match.wrap"
            android:textColor="@color/bg_99"
            android:text="@string/mail"
            android:layout_weight="2"
            android:textSize="@dimen/sp_16"
            android:gravity="right"/>
        <TextView
            android:id="@+id/mail"
            style="@style/match.wrap"
            android:textColor="@color/bg_99"
            tools:text="test@mail.com"
            android:textSize="@dimen/sp_16"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_12"/>
    </LinearLayout>
    <LinearLayout
        style="@style/match.wrap.hor_linear"
        android:layout_marginTop="@dimen/dp_5">
        <TextView
            style="@style/match.wrap"
            android:textColor="@color/bg_99"
            android:text="ID："
            android:textSize="@dimen/sp_16"
            android:layout_weight="2"
            android:gravity="right"/>
        <EditText
            android:id="@+id/ID"
            style="@style/service_input"
            android:textColor="@color/white"
            tools:text="test@mail.com"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"/>
    </LinearLayout>
    <LinearLayout
        style="@style/match.wrap.hor_linear">
        <TextView
            style="@style/match.wrap"
            android:textColor="@color/bg_99"
            android:text="PGP："
            android:textSize="@dimen/sp_16"
            android:layout_weight="2"
            android:gravity="right"/>
        <EditText
            android:id="@+id/pgpKey"
            style="@style/service_input"
            android:textColor="@color/white"
            tools:text="test@mail.com"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_5"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"/>
    </LinearLayout>
</LinearLayout>