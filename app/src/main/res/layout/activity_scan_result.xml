<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_20253A"
    android:fitsSystemWindows="true">
    <include layout="@layout/base_top_toolbar"/>

    <LinearLayout
        android:id="@+id/ll_scan_result"
        android:visibility="gone"
        style="@style/match.wrap.ver_linear"
        app:layout_constraintTop_toBottomOf="@id/base_top_toolbar"
        android:background="@drawable/bg_white_corners_shape"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_12">
        <LinearLayout
            style="@style/match.wrap.hor_linear"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tools:src="@mipmap/ic_logo"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/title"
                style="@style/wrap"
                tools:text="天猫商城"
                android:layout_marginLeft="@dimen/dp_12"
                android:textColor="@color/bg_20253A"
                android:textSize="@dimen/sp_18"/>
        </LinearLayout>
        <TextView
            android:id="@+id/address"
            style="@style/match.wrap"
            tools:text="登录地址：www.baidu.com/app/test"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/bg_20253A"
            android:layout_marginTop="@dimen/dp_18"/>
    </LinearLayout>

    <TextView
        android:id="@+id/hint_msg"
        style="@style/match.wrap"
        android:text="@string/scan_result_hint"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/bg_FF9D33"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_bottom"
        style="@style/match.wrap.hor_linear"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_10">

        <Button
            android:id="@+id/confirm"
            android:onClick="onClick"
            style="@style/match.wrap"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_marginRight="@dimen/dp_5"/>
        <Button
            android:id="@+id/cancel"
            android:onClick="onClick"
            style="@style/match.wrap"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_weight="1"
            android:background="@drawable/bg_orange_shape"
            android:layout_marginLeft="@dimen/dp_5"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>