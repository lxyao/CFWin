<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match.wrap.hor_linear"
    android:id="@+id/item_bg"
    android:background="@mipmap/ic_account_gray_bg"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        style="@style/match.wrap.ver_linear"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_weight="1">
        <LinearLayout
            style="@style/match.wrap.hor_linear"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                tools:src="@mipmap/ic_account_state_gray"
                android:scaleType="centerInside"
                android:contentDescription="@null"
                android:adjustViewBounds="true"
                android:layout_marginRight="@dimen/dp_12"/>

            <TextView
                android:id="@+id/item_title"
                style="@style/wrap"
                tools:text="ljifsdfsfs"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_subtitle"
            style="@style/wrap"
            tools:text="ljifsdfs  dfdfdfdaaa23"
            android:singleLine="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_13" />
    </LinearLayout>

    <View style="@style/ver_lin"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"/>

    <LinearLayout
        style="@style/match.ver_linear"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_weight="2">
        <TextView
            style="@style/wrap"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:text="@string/integral"
            android:layout_gravity="center"/>
        <View style="@style/wrap"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_score"
            style="@style/wrap"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="12423232.323"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>