<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:background="@drawable/bg_item_candy">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        tools:src="@mipmap/ic_logo"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"/>
    <TextView
        android:id="@+id/item_title"
        style="@style/match.wrap"
        tools:text="天猫商城"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/bg_20253A"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/item_subtitle"
        style="@style/wrap"
        tools:text="奖励糖果23颗 "
        android:textSize="@dimen/sp_15"
        android:textColor="@color/bg_272F4F"
        android:layout_marginRight="@dimen/dp_7"/>
    <ImageView
        android:id="@+id/item_square"
        android:src="@mipmap/ic_square_right"
        style="@style/wrap"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/dp_12"/>
</LinearLayout>