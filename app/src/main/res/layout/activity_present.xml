<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match.ver_linear"
    android:background="@color/bg_20253A"
    android:fitsSystemWindows="true">
    <include layout="@layout/base_top_toolbar"/>

    <LinearLayout
        android:background="@drawable/bg_txt_shape"
        style="@style/match.wrap.hor_linear"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">
        <TextView
            style="@style/wrap"
            android:text="剩余积分："
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"/>
        <TextView
            android:id="@+id/score"
            style="@style/match.wrap"
            tools:text="123232.32"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/bg_FF9D33"
            android:layout_marginRight="@dimen/dp_12"/>
    </LinearLayout>

    <LinearLayout
        style="@style/match.wrap.ver_linear"
        android:background="@color/bg_272F4F"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">
        <LinearLayout
            style="@style/match.wrap.hor_linear">
            <TextView
                style="@style/wrap"
                android:text="转赠积分："
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:paddingLeft="@dimen/dp_12"/>
            <EditText
                android:id="@+id/send_score"
                style="@style/match.wrap"
                android:singleLine="true"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:background="@android:color/transparent"
                android:hint="@stirng/send_score"
                android:textColorHint="@color/bg_99"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/bg_99"
                android:paddingRight="@dimen/dp_12"/>
        </LinearLayout>
        <View style="@style/hor_lin"
            android:background="@color/bg_66"/>
        <LinearLayout
            style="@style/match.wrap.hor_linear">
            <TextView
                style="@style/wrap"
                android:text="备注（选填）："
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:paddingLeft="@dimen/dp_12"/>
            <EditText
                android:id="@+id/remark"
                style="@style/match.wrap"
                android:singleLine="true"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:background="@android:color/transparent"
                android:textColorHint="@color/bg_99"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/bg_99"
                android:paddingRight="@dimen/dp_12"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_txt_shape"
        style="@style/match.wrap.hor_linear"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:minHeight="@dimen/dp_80">
        <TextView
            style="@style/wrap"
            android:text="对方账号："
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_12" />
        <EditText
            android:id="@+id/to_account"
            style="@style/match.wrap"
            tools:text="CFWINADDRESS.....\n"
            android:textSize="@dimen/sp_14"
            android:background="@android:color/transparent"
            android:textColorHint="@color/bg_99"
            android:textColor="@color/bg_99"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_txt_shape"
        style="@style/match.wrap.hor_linear"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">
        <TextView
            style="@style/wrap"
            android:text="GAS："
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_12" />
        <EditText
            android:id="@+id/gas"
            style="@style/match.wrap"
            tools:text="123232"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/bg_99"
            android:layout_marginRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"/>
    </LinearLayout>

    <Button
        android:id="@+id/sure"
        android:onClick="onClick"
        style="@style/match.wrap"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_35"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:background="@drawable/bg_complete_btn"/>
</LinearLayout>