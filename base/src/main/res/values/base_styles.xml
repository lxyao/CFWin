<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/activity_trans</item>
    </style>

    <style name="activity_trans">
        <item name="android:activityCloseEnterAnimation">@anim/hor_back_in</item>
        <item name="android:activityCloseExitAnimation">@anim/hor_back_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/hor_in</item>
        <item name="android:activityOpenExitAnimation">@anim/hor_out</item>
    </style>

    <!-- 悬浮对话框 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match.wrap">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap.match">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="hor_lin" parent="match.wrap">
        <item name="android:layout_height">@dimen/dp_0.5</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ver_lin" parent="wrap.match">
        <item name="android:layout_width">@dimen/dp_0.5</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="match.wrap.hor_linear" >
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="match.wrap.ver_linear" >
        <item name="android:orientation">vertical</item>
    </style>
    <style name="match.ver_linear" >
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ver_popup">
        <item name="android:windowEnterAnimation">@anim/ver_popup_in</item>
        <item name="android:windowExitAnimation">@anim/ver_popup_out</item>
    </style>
</resources>